@model IEnumerable<FootballersWithTeamViewModel>
@{
    ViewData["Title"] = "Все футболисты";
}

<h1>Все футболисты</h1>
<a asp-action="AddFootballer" asp-controller="Footballer" class="btn btn-primary">Добавить футболиста</a>

<table class="table">
    <tr><th>Имя футболиста</th><th>Пол</th><th>Дата Рождения</th><th>Название команды</th><th>Страна</th><th></th></tr>
    @foreach (var footballer in Model)
    {
        <tr>
            <td>@footballer.FirstName @footballer.LastName</td>
            <td>@footballer.Gender</td>
            <td>@footballer.Birthday.ToShortDateString()</td>
            <td>@footballer.TeamName</td>
            <td>@footballer.Country</td>
            
            <td><a asp-action="EditFootballer" asp-controller="Footballer" asp-route-footballerId="@footballer.Id" class="btn btn-warning">Изменить</a></td>
            
            </tr>
    }
</table>
